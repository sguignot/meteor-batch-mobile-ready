head
	title #{appName}

body
	.navbar.navbar-default(role='navigation')
		.container-fluid
			.navbar-header
				a.navbar-brand(href='/') #{appName}
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
			.navbar-collapse.collapse
				if userSignedIn
					ul.nav.navbar-nav
						li(class="{{#if routeIsHome}}active{{/if}}")
							a(href='/') Batch
						li(class="{{#if routeIsReport}}active{{/if}}")
							a(href='/report') Report
						li(class="{{#if routeIsExportCsv}}active{{/if}}")
							a(href="{{pathFor 'export.csv' query=exportCSVQuery}}") CSV
				ul.nav.navbar-nav.navbar-right
					+loginButtons
	.container
		if userSignedIn
			+alert
			+yield
		else
			.alert.alert-info Please sign in
